<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<% if @posts %>
	<ul>
		<% @posts.reverse.each do |post| %>
			<li>
			<%= post.title %>
			<%= post.text %>
			<a href ="#" class="create_blog_comment">COMMENT</a>
			<div class="blog_comment hidden">
			<%= render "comments/new" %>
			</div>
			</li>
		<% end %>
	</ul>
<% end %>