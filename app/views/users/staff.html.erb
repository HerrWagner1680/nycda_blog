<h1>STAFF</h1>

<% if @user %>
	<ul>
		<% @user.reverse.each do |staff| %>
			<li>

				<% if staff.avatar.present? %>
				<%= image_tag staff.avatar.url(:small) %>
				<% else %>
				<h4>Missing Pic</h4>
				<% end %>

			<h3><%= staff.fname %>
			<%= staff.lname %></strong> ... LIST SPECIALTY / CLASS TEACHING</h3>
			<em><%= staff.email %></em>
			</li>
		<% end %>
	</ul>
<% end %>