<h1>Contact Us</h1>

<%= form_for new_post do |f| %>
	<div class="title">
  	<%= f.text_field :title, placeholder: "Subject" %>
	</div>

	<div class="text_field">
	 <%= f.text_area :text, placeholder: "Enter Message Here ...", :cols => 30, :rows => 5, :class => 'text_field' %>
	</div>
   
  <%= f.submit %>
<% end %>


