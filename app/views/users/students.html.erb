<h1>STUDENTS</h1>

<% if @user %>
	<ul>
		<% @user.reverse.each do |student| %>
			<li>

				<% if student.avatar.present? %>
				<%= image_tag student.avatar.url(:thumb) %>
				<% else %>
				<h4>Missing Pic</h4>
				<% end %>

			<%= student.fname %>
			<%= student.lname %>
			<h3> CLASS ATTENDING ... goals </h3>
			</li>
		<% end %>
	</ul>
<% end %>