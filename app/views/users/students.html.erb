<br>
<h1>STUDENTS</h1>

<% if @user %>
	<ul>
		<% @user.reverse.each do |student| %>
			<div class="student">
				<li>
<!-- <div class="avatar_students"> -->
					<% if student.avatar.present? %>

						<%= image_tag student.avatar.url(:thumb) %>
						<% else %>
								<h4 class="missing_pic">MISSING PIC</h4>
						
						<% end %>
<!-- </div> -->
							<h3 class="class_attending"> CLASS ATTENDING</h3>
			 		<a class="student_link" href =<%="/users/#{student.id}" %>>
			 			<%= student.fname %>
						<%= student.lname %> 
					</a>
					<h3 class="student_goal"> <b>Goals:</b></h3> 
					<h4 class="student_h4_goal"><%= student.goals %></h4>

				</li>
			</div>
		<% end %>
	</ul>
<% end %>
